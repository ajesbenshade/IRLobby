# Oracle VM / Nginx
SERVER_NAME=liyf.app

# Database mode
# false => managed/external PostgreSQL
# true  => local PostgreSQL container (compose profile: localdb)
USE_LOCAL_POSTGRES=false

# Local PostgreSQL container credentials (used only when USE_LOCAL_POSTGRES=true)
POSTGRES_DB=irlobby
POSTGRES_USER=irlobby
POSTGRES_PASSWORD=replace-with-strong-db-password

# Django
SECRET_KEY=replace-with-random-secret
DEBUG=False
ALLOWED_HOSTS=liyf.app,www.liyf.app,127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=https://liyf.app,https://www.liyf.app
CORS_ALLOWED_ORIGINS=https://liyf.app,https://www.liyf.app,exp://localhost:8081
FRONTEND_BASE_URL=https://liyf.app

# Database URL used by Django.
# Managed DB example:
# DATABASE_URL=postgresql://username:password@host:5432/dbname?sslmode=require
# Neon pooled example:
# DATABASE_URL=postgresql://neondb_owner:<password>@<endpoint>-pooler.<region>.aws.neon.tech/neondb?sslmode=require&channel_binding=require
# Local DB container example:
# DATABASE_URL=postgresql://irlobby:replace-with-strong-db-password@postgres:5432/irlobby
DATABASE_URL=postgresql://username:password@host:5432/dbname?sslmode=require

# Optional helper value used by deploy/oracle/migrate-to-neon.sh
NEON_DATABASE_URL=

# Optional OAuth
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Optional email/password reset
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
