# Domain / Nginx
SERVER_NAME=liyf.app

# Database mode
USE_LOCAL_POSTGRES=true
POSTGRES_DB=irlobby
POSTGRES_USER=irlobby
POSTGRES_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# Django
SECRET_KEY=CHANGE_ME_DJANGO_SECRET
DEBUG=False
ALLOWED_HOSTS=liyf.app,www.liyf.app,127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=https://liyf.app,https://www.liyf.app
CORS_ALLOWED_ORIGINS=https://liyf.app,https://www.liyf.app,exp://localhost:8081
FRONTEND_BASE_URL=https://liyf.app

# Django DB URL (local postgres service)
DATABASE_URL=postgresql://irlobby:CHANGE_ME_STRONG_DB_PASSWORD@postgres:5432/irlobby

# Optional Neon target URL used by deploy/oracle/migrate-to-neon.sh
NEON_DATABASE_URL=postgresql://neondb_owner:CHANGE_ME_NEON_PASSWORD@CHANGE_ME_NEON_POOLER_HOST/neondb?sslmode=require&channel_binding=require

# Optional OAuth (recommended to fill for launch)
TWITTER_CLIENT_ID=CHANGE_ME_TWITTER_CLIENT_ID
TWITTER_CLIENT_SECRET=CHANGE_ME_TWITTER_CLIENT_SECRET

# Email/password reset
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=CHANGE_ME_SMTP_USER
EMAIL_HOST_PASSWORD=CHANGE_ME_SMTP_APP_PASSWORD
DEFAULT_FROM_EMAIL=noreply@liyf.app